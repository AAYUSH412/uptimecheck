# NPM Configuration for UptimeCheck
# Use Bun as the package manager
package-manager=bun

# Enable workspaces
enable-workspaces=true

# Save exact versions
save-exact=true

# Disable automatic package-lock.json creation (using bun.lock instead)
package-lock=false

# Set registry (use default npm registry)
registry=https://registry.npmjs.org/

# Workspace configuration
workspaces-update=false