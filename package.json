{
  "name": "uptimecheck",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "bun run clean && bun install",
    "db:generate": "cd packages/db && bun prisma generate",
    "db:migrate": "cd packages/db && bun prisma migrate dev",
    "db:seed": "cd packages/db && bun run seed",
    "db:studio": "cd packages/db && bun prisma studio",
    "db:reset": "cd packages/db && bun prisma migrate reset",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up -d",
    "prepare": "bun run db:generate"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
